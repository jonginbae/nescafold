<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-9">
    <h1>Admin Main Page</h1>
    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <%= form_for(:request , :url => updatestatus_path , :method => 'PUT') do |f| %>
          <%= f.hidden_field :name, value: order.id %>
          <td>  <%= order.name %> </td>
          <td>  <%= order.status %>  </td>
          <td><%= select_tag :state_search, options_for_select([['WAIT', 'WAIT'],['COOK', 'COOK'], ['DELIVER', 'DELIVER']]) %></td>
          <td><%= submit_tag "UPDATE" %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
